<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="cast"
            type="vn.com.framgia.movie_db26.data.model.Cast" />

        <variable
            name="listener"
            type="vn.com.framgia.movie_db26.screen.detail.OnClickCastItemListener" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_240"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="0dp"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_8"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:onClick="@{()->listener.onClickItem(cast)}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_cast"
                setAvatar="@{cast.profilePath}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_cast_real_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_cast_item_background"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_1"
                android:text="@{cast.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/image_cast"
                app:layout_constraintBottom_toTopOf="@+id/text_cast_name"
                app:layout_constraintStart_toStartOf="@+id/image_cast" />

            <TextView
                android:id="@+id/text_cast_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_cast_item_background"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:text="@{cast.character}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
