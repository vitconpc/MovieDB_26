<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="film"
            type="vn.com.framgia.movie_db26.data.model.Film" />

        <variable
            name="listener"
            type="vn.com.framgia.movie_db26.screen.home.OnItemFilmClickListener" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:padding="@dimen/dp_16">

        <android.support.constraint.ConstraintLayout
            android:onClick="@{()->listener.onClickItem(film)}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/image_search_item_card"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_210"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_8"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    setAvatar="@{film.posterPath}"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/text_search_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingEnd="@dimen/dp_8"
                android:paddingStart="@dimen/dp_8"
                android:text="@{film.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@color/color_cast_item_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/image_search_item_card"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/image_ic_search_item_rating"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@id/image_search_item_card"
                app:layout_constraintStart_toEndOf="@id/image_search_item_card"
                app:layout_constraintTop_toBottomOf="@+id/text_search_item_title"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/text_search_item_rating_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@{``+film.voteCount}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_ic_search_item_rating"
                app:layout_constraintTop_toBottomOf="@+id/text_search_item_title" />

            <ImageView
                android:id="@+id/image_release_date"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@drawable/ic_release_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/image_search_item_card"
                app:layout_constraintTop_toBottomOf="@+id/image_ic_search_item_rating" />

            <TextView
                android:id="@+id/text_release_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@{film.releaseDate}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_release_date"
                app:layout_constraintTop_toBottomOf="@+id/text_search_item_rating_value" />

            <RatingBar
                android:rating="@{film.voteAverage/2}"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:focusable="false"
                android:layout_width="@dimen/dp_241"
                android:layout_height="@dimen/dp_51"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/image_search_item_card"
                app:layout_constraintTop_toBottomOf="@+id/text_release_date"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/image_float_favorite"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@drawable/icon_favorite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
