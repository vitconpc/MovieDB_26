<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="company"
            type="vn.com.framgia.movie_db26.data.model.Company"/>

        <variable
            name="listener"
            type="vn.com.framgia.movie_db26.screen.detail.OnItemCompanyClickListener"/>
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_140"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_8"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:onClick="@{()->listener.onClickItem(company)}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                setAvatar="@{company.logoPath}"
                android:id="@+id/image_production"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_production"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/color_cast_item_background"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_2"
                android:text="@{company.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_production" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
